                stage('Build Docker Image') {
                    steps {
                        script {
                            dir('DevOps_Project') {

                                // Construire l'image Docker avec un tag. Remplacez 'myapp' par le nom de votre application
                                                sh 'sudo docker login'

                                sh 'sudo docker build -t devops_project .'
                            }
                        }
                    }
                }

                // Ajouter une Ã©tape pour pousser l'image dans un registre Docker
                stage('Push Docker Image') {
                    steps {
                        script {
                            // Pousser l'image vers le registre Docker. Remplacez 'myregistry' par l'URL de votre registre
                              def dockerUsername = 'maleksoufi'
                              def dockerPassword = 'docker123'
                                 sh "sudo docker login -u $dockerUsername -p $dockerPassword"
                                   dir('DevOps_Project') {
                sh 'sudo docker tag devops_project maleksoufi/devops_project:latest'
                sh 'sudo docker push maleksoufi/devops_project:latest'
            }

                        }
                    }
}

    }
}


