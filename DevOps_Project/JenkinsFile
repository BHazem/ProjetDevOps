pipeline{
    agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
        stage("Chekout Git"){
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps{
                 dir('DevOps_Project') {
                sh 'mvn compile'
            }
        }
}
stage('Build') {
    steps {
        dir('DevOps_Project') {
            sh 'mvn package'
        }
    }
}

    stage('Unit Tests') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn test'
            }
        }
    }
    stage('JaCoCo Coverage Report') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn jacoco:prepare-agent test jacoco:report'
            }
        }
    }



     stage('MVN SONARQUBE') {
            steps{
                 dir('DevOps_Project') {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar -Dsonar.jacoco.reportPaths=target/site/jacoco/jacoco.xml'
            }}
        }
    }

}
