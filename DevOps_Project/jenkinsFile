pipeline{
    agent any
    stages {
        stage("Testing Maven"){
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK"){
            steps {
                sh "java -version"
            }
        }
         stage("Checkout Git") {
                    steps {
                        echo "Pulling"
                    }
                }
         stage("Mvn clean") {
             steps {
                  dir('DevOps_Project') {
                       sh 'mvn clean'
                        }
                    }
                }
        stage('MVN COMPILE') {
            steps{
                 dir('DevOps_Project') {
                sh 'mvn compile'
            }
        }
}

    stage('Unit Tests') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn test'
            }
        }
    }
    stage('JaCoCo Coverage Report') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn jacoco:report'
            }
        }
    }



     stage('MVN SONARQUBE') {
            steps{
                 dir('DevOps_Project') {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }}
        }
    }



}
