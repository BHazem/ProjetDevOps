pipeline {
    agent any
    stages {
        stage("Testing Maven") {
            steps {
                sh "mvn -version"
            }
        }
        stage("Testing JDK") {
            steps {
                sh "java -version"
            }
        }
        stage("Checkout Git") {
            steps {
                echo "Pulling"
            }
        }
        stage('MVN COMPILE') {
            steps {
                dir('DevOps_Project') {
                    sh 'mvn compile'
                }
            }
        }
stage("Testing Maven") {
    steps {
        script {
            def nodePath = tool name: 'Node.js', type: 'hudson.tools.InstallSourceProperty$Installable'
            sh "${nodePath}/bin/node -v"
        }
    }
}
stage('Run Tests') {
    steps {
        dir('DevOps_Project') {
            sh 'mvn test' 
        }
    }
}
  stage('Generate JaCoCo Coverage Report') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn jacoco:report'
            }
        }
    }
    stage('MVN SONARQUBE') {
        steps {
            dir('DevOps_Project') {
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
        }
    }
    }
    post {
        always {
            script {
                def scannerHome = tool name: 'sonarqube', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                withSonarQubeEnv('sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner \
                        -Dsonar.login=admin \
                        -Dsonar.password=sonar \
                        -Dsonar.jacoco.reportPaths=DevOps_Project/target/site/jacoco/jacoco.xml \
                        -Dsonar.projectKey=DevOps_Project \
                        -Dsonar.exclusions=vendor/**,resources/**,**/*.java \
                        -Dsonar.host.url=http://192.168.1.27:9000/"
                }
            }
        }
    }
  
}
